<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:orientation="horizontal"
    app:cardElevation="0dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/collect_card_id_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Line 1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/collect_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collect_card_id_address"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="Line 2"
            android:textStyle="italic"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/collect_card_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collect_card_date"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            android:text="Line 2"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/collect_card_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/collect_card_delete"
            android:layout_toLeftOf="@+id/collect_card_delete"
            android:tint="@color/colorDarkBlue"
            app:srcCompat="@drawable/ic_pencil" />

        <ImageView
            android:id="@+id/collect_card_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:tint="@color/colorDarkRed"
            app:srcCompat="@drawable/ic_delete" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>
